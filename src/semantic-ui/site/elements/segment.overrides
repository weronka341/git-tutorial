/*******************************
         Site Overrides
*******************************/
.ui.segment {
    border-radius: 0;
    border: none;
}

.ui.segment.pushable {
    height: calc(100% - 7.5vh);
    margin: 0 3px 0 3px;
}

.ui.tertiary.segment {
    color: var(--light-gray);
    background: var(--yellow-background);
    border: 1px solid rgba(34, 36, 38, 0.15);
}